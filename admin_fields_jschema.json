    "group" : "node_settings"
  },
  "feed_update_interval" : {
    "type" :  "string",
    "title" :  "Feed update interval",
    "inputAs" : "select",
    "enum" : [
      "hourly",
      "daily",
      "weekly",
      "manual"
    ],
    "enumNames" : [
      "Hourly",
      "Daily",
      "Weekly",
      "Manual only"
    ],
    "validateAs" : "text",
    "default" : "daily",
