    "inputAs" : "text",
    "group" : "map_settings",
    "default" : "1.7"
  },
  "mapbox_token" : {
    "type" :  "string",
    "title" :  "API key for Mapbox, tile provider for Leaflet. https://www.mapbox.com/studio/account/tokens/",
    "inputAs" : "text",
    "group" : "map_settings"
  },
  "updated_node_post_status" : {
    "type" :  "string",
    "title" :  "Updated node post status",
    "enum" : [
      "no_change",
      "draft"
    ],
    "enumNames" : [
      "No change",
      "Draft"
    ],
    "default" : "no_change",
    "group" : "node_settings"
  },
  "new_node_post_status" : {
    "type" :  "string",
    "title" :  "New node post status",
    "inputAs" : "select",
    "enum" : [
      "publish",
      "draft"
    ],
    "enumNames" : [
      "Publish",
      "Draft"
    ],
    "default" : "publish",
    "group" : "node_settings"
  }
}
}
